cmather:handlebars-server       # Allows handlebars templates to be defined on the server in .handlebars files
gadicohen:phantomjs             # PhantomJS is a headless WebKit scriptable with a JavaScript API.
matteodem:easy-search           # Adds search functionality.
simple:reactive-method          # Call methods synchronously inside Tracker.autorun
sjors:meteor-masonry            # Cascading grid layout library
